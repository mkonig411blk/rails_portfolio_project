<%= form_for(user) do |f| %>
<div class="form-group">
<div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
</div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class='field'>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class='field'>
    <%= f.label :height, "Height (in inches)" %><br />
    <%= f.number_field :height %>
  </div>
  <div class='field'>
    <%= f.label :sport, "What is your favorite sport?" %><br />
    <%= f.text_field :sport %>
  </div>
  <div class='field'>
    <%= f.label :city, "In what city do you live?" %><br />
    <%= f.text_field :city %>
  </div>
  <%= f.submit button_label %>
<% end %>
</div>
