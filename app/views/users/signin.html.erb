<%= form_for :user, url: login_path  do |f| %>
  <div class='field'>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class='field'>
    <%= f.submit "Sign In" %>
  </div>
<% end %>
