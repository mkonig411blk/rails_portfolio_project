<!DOCTYPE html>
<html>
  <head>
    <title>RailsPortfolioProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
    <% if session[:user_id] %>
        <span class="navbar-brand">"Join a Team"</span>
        <span class="nav-link"><%= link_to 'My Profile', user_path(current_user) %></span>
        <span class="nav-link"><%= link_to 'My Teams', myteams_path %></span>
        <span class="nav-link"><%= link_to 'All Teams', teams_path %></span>
        <span class="nav-link"><%= link_to 'All Games', games_path %></span>
        <span class="nav-link"><%= link_to 'Log Out', logout_path(@session), method: :delete %></span>
    <% else %>
        <span class="navbar-brand">"Join a Team"</span>
        <span class="nav-link"><%= link_to 'Sign Up', '/users/new' %></span>
        <span class="nav-link"><%= link_to 'Login', login_path %></span>
        <span class="nav-link"><%= link_to 'Log in with Facebook', '/auth/facebook'%></span>
<% end %>
</nav>
    <%= yield %>
  </body>
</html>
